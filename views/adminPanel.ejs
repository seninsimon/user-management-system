<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="/css/adminpanel.css">
</head>
<body>
    <div class="navbar">
        <h1>User Management</h1>
        <a href="/admin/logout">Logout</a>
    </div>

    <!-- Search Bar -->
    <div class="searchbar">
        <form action="/adminpanel/searchuser" method="get">
            <input type="text" name="search" placeholder="Search by username or email" />
            <button type="submit">Search</button>
        </form>
    </div>

    <!-- Add User Button -->
    <a href="/addUser" class="action-btn add-user-btn">Add User</a>

    <!-- User Table -->
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.mobile %></td>
                <td>
                    <a href="/edituser/<%=user.id%>" class="action-btn edit-btn">Edit</a>
                    <form action="/deleteuser/<%=user.id%>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" class="action-btn delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Footer -->
    <footer>
        <p>Â© 2024 Your Company. All rights reserved.</p>
    </footer>
</body>
</html>
